{
  "name": "@vostokplatform/transactions-factory",
  "version": "1.0.4",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@vostokplatform/signature-generator": "2.0.3",
    "@waves/data-entities": "^1.6.0",
    "base64-js": "1.3.0",
    "crypto-js": "3.1.9-1"
  },
  "scripts": {
    "test": "node_modules/.bin/mocha -r ts-node/register tests/*.ts",
    "test-server": "node_modules/.bin/ts-node tests/server/server.ts",
    "compile": "tsc -p ./",
    "uglify": "npm run uglify-full && npm run uglify-partial",
    "uglify-full": "node_modules/.bin/uglifyjs dist/transactions-factory.js -o dist/transactions-factory.min.js",
    "uglify-partial": "node_modules/.bin/uglifyjs dist/transactions-factory.partial.js -o dist/transactions-factory.partial.min.js",
    "build-full": "node_modules/.bin/browserify dist/index.js -s wavesTransactionsFactory --node -o dist/transactions-factory.js",
    "build-partial": "node_modules/.bin/browserify dist/index.js -u @waves/data-entities --node -s wavesTransactionsFactory -o dist/transactions-factory.partial.js",
    "build": "rm -rf ./dist && npm run compile && npm run build-full && npm run build-partial"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.3",
    "browserify": "^16.2.2",
    "express": "^4.17.1",
    "mocha": "^8.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3",
    "uglify-js": "^3.4.7",
    "body-parser-bigint": "^1.13.2"
  }
}
